<h1>{{title}}</h1>

{{#if orders.length}}
  {{#each orders}}

  <div class="row">
    <div class="col e6 offset-s3">
      <div class="card">
        <div class="card-content">
          <span class="card-title">
            Order â„–: <small>{{_id}}</small>
          </span>
          <p>{{date}}</p>
          <p><em>{{user.name}} </em>{{user.userId.email}}</p>
          <ol>
            {{#each courses}}
              <li>{{course.title}}</li>
            {{/each}}
          </ol>
          <hr>
          <p>Price: <span class="price">{{total}}</span></p>
          
        </div>
      </div>
    </div>
  </div>

  {{/each}}

{{else}}
  <p>Order is empty</p>
{{/if}}
